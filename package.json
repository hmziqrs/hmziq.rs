    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.2.0",
    "critters": "^0.0.25",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "lighthouse": "^12.6.1",
    "playwright": "^1.53.2",
