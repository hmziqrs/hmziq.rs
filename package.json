{
  "name": "hmziq.rs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "bun build:wasm:dev && next dev --turbopack",
    "build": "bun run build:wasm && next build --turbopack",
    "build:prod": "bun run build:wasm && next build",
    "copy:wasm": "bun ./scripts/copy-wasm.js",
    "build:wasm": "cd wasm && wasm-pack build --release --target web --out-dir pkg && bun copy:wasm",
    "build:wasm:dev": "cd wasm && wasm-pack build --target web --out-dir pkg --dev && node ../scripts/copy-wasm.js",
    "prod": "bun run build && bun preview",
    "start": "next start",
    "preview": "bunx serve out",
    "export": "bun run build:prod && echo 'Static files exported to ./out'",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "kill-dev": "kill -9 $(lsof -ti:3000) 2>/dev/null || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmziqrs/hmziq.rs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hmziqrs/hmziq.rs/issues"
  },
  "homepage": "https://github.com/hmziqrs/hmziq.rs#readme",
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.5.0",
    "@react-three/drei": "^10.1.2",
    "@react-three/fiber": "^9.1.2",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "clsx": "^2.1.1",
    "firebase": "^12.0.0",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.525.0",
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "three": "^0.177.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "@playwright/test": "^1.53.2",
    "@tailwindcss/postcss": "^4.1.8",
